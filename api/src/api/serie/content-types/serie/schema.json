{
  "kind": "collectionType",
  "collectionName": "series",
  "info": {
    "singularName": "serie",
    "pluralName": "series",
    "displayName": "Series"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "year": {
      "type": "integer",
      "required": true,
      "min": 1888
    },
    "synopsis": {
      "type": "text"
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "genres": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::genre.genre"
    },
    "cast": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person"
    },
    "seasons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::season.season",
      "mappedBy": "series"
    }
  }
}
