{
  "kind": "collectionType",
  "collectionName": "episodes",
  "info": {
    "singularName": "episode",
    "pluralName": "episodes",
    "displayName": "Episode"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "number": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "synopsis": {
      "type": "text"
    },
    "video": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "season": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::season.season",
      "inversedBy": "episodes",
      "required": true
    }
  }
}
